<h1> By Kain, A New Gift! </h1>

<%= form_for(@ability) do |a| %>
    <%= a.label :name %>
    <%= a.text_field :name %><br><br>

    <%= a.label :damage %>
    <%= a.number_field :damage %><br><br>

    <%= a.label :speed %>
    <%= a.number_field :speed %><br><br>

    <%= a.label :description %>
    <%= a.text_field :description %><br><br>

    Who Has Gained This Power<%= a.collection_select :vampire_id, Vampire.all, :id, :name %><br><br>

    <%= a.submit "Attain This Power"%>
<% end %>